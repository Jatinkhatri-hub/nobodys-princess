{% if heading != blank %}
    <div class="outfit-collection jusfify-self-{{ text-alignment |  default: 'start'}} text-{{ text-alignment |  default: 'start' }}">
    {% if heading != blank %} 
        <div class="outfit-collection__header">
            <div>
                {% if heading != blank %}
                    <h4 class="h4">{{ heading }}</h4>
                {% endif %}
            </div>
            <div>
                <button type="button">
                    {%- render 'icon' with 'minus', width: 12, direction_aware: true -%}
                </button>
            </div>
        </div>

        <div class="product-list__containers">
            <ul class="product-list__container">
                <li class="product-card__item">
                    <div class="product-card__container">
                        <div class="product-img__container">
                            <img src="{{ product_image }}"  alt="Product Image">
                        </div>
                        <div class="product-info__container">
                            <div>
                                <p class="product-name">{{ product_name }}</p>
                            </div>
                            <div>
                                <p class="product-price">{{ produ }}</p>
                            </div>
                        </div>
                    </div>
                </li>
            </ul>
           
        </div>
        
    {% endif %}
    </div>
{% endif %}