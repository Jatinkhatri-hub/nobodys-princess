<cart-drawer id="my-outfit-drawer" class="cart-drawer drawer  {% if cart.empty? %}drawer--center-body{% endif %} color-scheme color-scheme--{{ color_scheme }}" initial-focus="false" handle-editor-events>
   <p class="h4" slot="header">My Outfit</p>
   
   {% if cart.empty? %}
    <p class="h5 text-center">{{'cart.general.empty' | t}}</p>
   {% endif %}

   {% render 'outfit-creator-line-item', image: {{ product_image }} %}
</cart-drawer>