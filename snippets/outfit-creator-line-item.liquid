<line-item class="line-item align-start">
    {% if image != blank %}
        {{ image | image_url: width: image.width |  image_tag: loading: 'lazy', sizes: '(max-width: 699px) 70px, 120px', widths: '70, 120, 140, 210, 240, 360', class: 'line-item__media' }}
    {% endif %} 
    
    <div class="line-item-info">
        <div class="v-stack justify-items-start gap2">
            <div class="v-stack justify-items-start gap-0.5">
                <p class="h3">TOP:</p>
                <p class="outfit-name-price">Anna Jacket - $399</p>
                {% if image !=blank %}
                <a href="{{ line_item.url }}" > Aqua {%  comment  %} {{ line_item.product.title |  default line_item.title }}{% endcomment %}</a>
                {% else %} 
                    <p > Aqua{% comment %}{{ line_item.product.title |  default line_item.title }} {% endcomment %}</p>
                {% endif %}
                <div class="variant_dropdown">
                    <div>
                    <span class="dropdown_text">Select a Style</span>
                    {%- render 'icon' with 'arrow-down'
                        , width: 12
                        , direction_aware: true -%}
                    </div>
                </div>
                


            </div>

        </div>
        

    </div>

</line-item>