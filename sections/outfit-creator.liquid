<style>
  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0
}



main{
    display: grid;
    grid-template-columns: repeat( 12, 1fr);
}

.page-header {
    margin: 2rem;
    margin-bottom: 0;
    display: grid;
    justify-content: center;
    color: #5c5c5c;
    padding-bottom: 2rem;
    border-bottom: 1px solid #5c5c5c;
    grid-column: 2 / 12;
}

.heading {
    text-align: center;
    font-size: 1.5rem;
    margin-bottom: 1rem ;

}

.content {
    text-align: center;
    font-size: 1.2rem;
}


.container {
    display: grid;
    grid-template-columns: 1fr 400px;
    grid-column: 2 / 12;
    padding: 2rem;
}

.categorie-heading {
    font-size: 1.5rem;
    color: #5c5c5c;
}



.categorie-container {
    border-bottom: 1px solid #5c5c5c;
    margin: 0 4rem 0 0;
}


.product-list__container {
    margin-top: 1rem;
}

.product-cards {
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    grid-gap: 1rem;
}

.product-card {
    list-style: none;
}

.product-image__container {
    width: 100%;
}

.product-image__container > img {
    width: 100%;
}



.outfit-preview__container {
    max-width: 400px;
    margin: 2rem auto;
}

.preview-img__container {
    max-width: 400px;
    overflow: hidden;
    display: flex;
    justify-content: center;

    
}

.preview-img {
    max-width: 100%;
    margin: 0 auto;
    object-fit: cover;
}



@media (max-width: 789px) {
    .page-header {
        grid-column: 1 / 13;
    }

    .container {
        grid-column: 1 / 13;
    }


    .outfit-preview__container {
        grid-column: 1 / 3;
    }

    .categorie-containers {
        grid-column: 1 / 3;
    }

}   

@media screen and (max-width: 1024px) {
    .product-cards {
        grid-template-columns: repeat(3, 1fr);
    }
}
</style>


