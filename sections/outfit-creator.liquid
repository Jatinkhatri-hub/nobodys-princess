{% assign color_scheme_hash = section.settings.color_scheme.settings.background_gradient | default: section.settings.color_scheme.settings.background | md5 %}

<div class="section-spacing color-scheme color-scheme--{{ section.settings.color_scheme.id }} color-scheme--bg-{{ color_scheme_hash }} {% if section.settings.separate_section_with_border %}bordered-section{% endif %}">
  <div class="container {%  unless section.settings.container_size == 'full' %}container--{{ section.settings.container_size }}{% endunless %}">
    <div class="section-stack">
      {% render 'section-header'
        , subheading: section.settings.subheading
        , heading: section.settings.title
        , content: section.settings.content
        , text_alignment: 'center' %}
    </div>

    <div class="outfit-creator">
      <div class="outfit-creator__container gap-12">
        <div class="product-categories__container">
          <div>
            {%  capture product_list %} 
              
            {% endcapture %} 

            {% render 'outfit-collection'
              , heading: section.settings.collection_heading %}
          </div>
        </div>
        <div class="product-preview__container">
          <div class="preview-img__container">
            {% if section.settings.image != blank %}
              <picture>
                {% assign sizes = "(max-width: 699px) 100vh,50vh" %}

                {{ section.settings.image | image_url: width: section.settings.image.width | image_tag: sizes: sizes, widths: '200,300,400,500,600,700,800,900,1000,1200,1400,1600,1800,2000,2200,2400,2600,2800,3000,3200', reveal-on-scroll: section.settings.reveal_on_scroll }}
              </picture>
            {% else %}
              {{ 'image' | placeholder_svg_tag: 'placeholder' }}
            {% endif %}

          </div>
        </div>

      </div>

    </div>


  </div>
</div>


{% schema %}
  {
    "name": "Outfit Creator",
    "class": "shopify-section--outfit-creator",
    "tag": "section",
    "settings": [
      {
        "type": "color_scheme",
        "id": "color_scheme",
        "label": "t:global.colors.scheme",
        "default": "scheme-1"
      },
      {
        "type": "checkbox",
        "id": "seperate_section_with_border",
        "label": "t:global.section.separate_section_with_border",
        "default": true
      },
      {
        "type": "select",
        "id": "container_size",
        "label": "t:global.sizes.section_width",
        "options": [
          {
            "value": "lg",
            "label": "t:global.sizes.large"
          }, {
            "value": "xl",
            "label": "t:global.sizes.x_large"
          }, {
            "value": "full",
            "label": "t:global.sizes.full_width"
          }
        ],
        "default": "lg"
      },
      {
        "type": "header",
        "content": "t:global.product_list.product_list_category"
      }, {
        "type": "checkbox",
        "id": "stack_products",
        "label": "t:global.product_list.stack_products",
        "default": true
      }, {
        "type": "select",
        "id": "products_per_row_mobile",
        "label": "t:global.product_list.products_per_row_mobile",
        "options": [
          {
            "value": "1",
            "label": "1"
          }, {
            "value": "2",
            "label": "2"
          }
        ],
        "default": "2"
      }, {
        "type": "range",
        "id": "products_per_row_desktop",
        "min": 2,
        "max": 6,
        "label": "t:global.product_list.products_per_row_desktop",
        "info": "t:global.product_list.products_per_row_desktop_info",
        "default": 4
      }, {
        "type": "header",
        "content": "t:global.section.header_category"
      }, {
        "type": "inline_richtext",
        "id": "subheading",
        "label": "t:global.text.subheading"
      }, {
        "type": "inline_richtext",
        "id": "title",
        "label": "t:global.text.heading",
        "default": "Outfit creator"
      }, {
        "type": "richtext",
        "id": "content",
        "label": "t:global.text.content"
      }, {
        "type": "header",
        "content": "Collection Header"
      }, {
        "type": "inline_richtext",
        "id": "collection_heading",
        "label": "Collection Heading",
        "default": "Collection Categorie"
      }, {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      }
    ],
    "blocks": [
      {
        "type": "collection",
        "name": "Collection",
        "settings": [
          {
            "type": "collection",
            "id": "collection",
            "label": "Collection List"
          },
          {
            "type": "range",
            "id": "product_count",
            "min": 2,
            "max": 50,
            "label": "No Of Products to show",
            "default": 8

          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Outfit Creator"
      }
    ]
  }
{% endschema %}