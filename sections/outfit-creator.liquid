{% assign color_scheme_hash = section.settings.color_scheme.settings.background_gradient | default: section.settings.color_scheme.settings.background | md5 %}

<div class="section-spacing color-scheme color-scheme--{{ section.settings.color_scheme.id }} color-scheme--bg-{{ color_scheme_hash }} {% if section.settings.separate_section_with_border %}bordered-section{% endif %}">
  <div class="container {%  unless section.settings.container_size == 'full' %}container--{{ section.settings.container_size }}{% endunless %}">
    <div class="outfit-creator-container">
      <div class="section-stack border__bottom padding__bottom">
        {% render 'section-header'
          , subheading: section.settings.subheading
          , heading: section.settings.title
          , content: section.settings.content
          , text_alignment: 'center'
        %}
      </div>
      {% render 'my-outfit-drawer', color_scheme: section.settings.color_scheme.id %}
      {% render 'popup-light-box', color_scheme: section.settings.color_scheme, color_scheme_hash: color_scheme_hash %} 
      {%  render '' %} %}
      <div class="outfit-creator">
        <div class="outfit-creator__container gap-10">
          <div class="product-categories__container">
            {%- if section.blocks.size > 0 -%}
              {%- for block in section.blocks -%}
                {%- assign product = block.settings.product -%}
                

                {%- capture accordion_content -%}
                  <product-list class="product-list  product-card-size {% if section.settings.hide_product_information %}product-list--compact{% endif %} justify-center gap-4">
                    
                    {%- render 'ourfit-creator-product-card', product: product, block: block -%}
                    
                    
    
                  </product-list>
                {%- endcapture -%}
                {%- render 'accordion'
                  , title: block.settings.product_heading
                  , content: accordion_content
                  , open: forloop.first
                  , class: 'border__bottom'
                  , block: block -%}
              {%- endfor -%}
            {%- endif -%}

          </div>
          <div class="product-preview__container">
            <div class="preview-img__container">
              {% if section.settings.image != blank %}
                <picture>
                  <div style="position: absolute;">
                    <img srcset="../assets/JacketAqua.png" class="preview-product__image top">
                  </div>
                  <div style="position: absolute;">
                    <img srcset="../assets/PantsRaspberry.png" class="preview-product__image">
                  </div>
                  {% assign sizes = "(max-width: 699px) 100vh,50vh" %}

                  {{ section.settings.image | image_url: width: section.settings.image.width | image_tag: sizes: sizes, widths: '200,300,400,500,600,700,800,900,1000,1200,1400,1600,1800,2000,2200,2400,2600,2800,3000,3200', reveal-on-scroll: section.settings.reveal_on_scroll, class: "preview-image" }}

                  <div class="preview-buy__btn">
                    {% render "button"
                      , content: "Buy Outfit"
                      , aria_controls: "my-outfit-drawer"
                      , background: section.settings.backgroundOne
                      , stretch: "true" %}
                  </div>
                  <div class="preview-clear__btn">
                    {% render "button"
                      , content: "Clear"
                      , background: section.settings.backgroundTwo
                      , style: "outline"
                      , stretch: "true" %}
                  </div>
                </picture>


                <div class="product-preview__btn-group">
                  {% render "button"
                    , content: "Buy Outfit"
                    , aria_controls: "my-outfit-drawer"
                    , background: section.settings.backgroundOne
                    , stretch: "true" %}
                  {% render "button"
                    , content: "Clear all selection"
                    , background: section.settings.backgroundTwo
                    , style: "outline"
                    , stretch: "true" %}
                </div>
              {% else %}
                {{ 'image' | placeholder_svg_tag: 'placeholder' }}
              {% endif %}

            </div>
          </div>

        </div>

      </div>

    </div>
  </div>
</div>


{% schema %}
  {
    "name": "Outfit Creator",
    "class": "shopify-section--outfit-creator",
    "tag": "section",
    "settings": [
      {
        "type": "color_scheme",
        "id": "color_scheme",
        "label": "t:global.colors.scheme",
        "default": "scheme-1"
      },
      {
        "type": "checkbox",
        "id": "seperate_section_with_border",
        "label": "t:global.section.separate_section_with_border",
        "default": true
      },
      {
        "type": "select",
        "id": "container_size",
        "label": "t:global.sizes.section_width",
        "options": [
          {
            "value": "lg",
            "label": "t:global.sizes.large"
          }, {
            "value": "xl",
            "label": "t:global.sizes.x_large"
          }, {
            "value": "full",
            "label": "t:global.sizes.full_width"
          }
        ],
        "default": "lg"
      },
      {
        "type": "header",
        "content": "t:global.section.header_category"
      }, {
        "type": "inline_richtext",
        "id": "subheading",
        "label": "t:global.text.subheading"
      }, {
        "type": "inline_richtext",
        "id": "title",
        "label": "t:global.text.heading",
        "default": "Outfit creator"
      }, {
        "type": "richtext",
        "id": "content",
        "label": "t:global.text.content"
      }, {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "color",
        "id": "backgroundOne",
        "label": "Button-1 Background"
      }, {
        "type": "color",
        "id": "backgroundTwo",
        "label": "Button-2 Background"
      }

    ],
    "blocks": [
      {
        "name": "Product",
        "type": "product",
        "settings": [
          {
            "type": "product",
            "id": "product",
            "label": "product"
          }, {
            "type": "inline_richtext",
            "id": "product_heading",
            "label": "Product Heading",
            "default": "Product Category"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Outfit Creator",
        "blocks": [
          {
            "type": "product"
          }
        ]
      }
    ]
  }
{% endschema %}