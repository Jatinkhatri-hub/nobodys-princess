          }
        ],
        "default": "lg"
      },
      {
        "type": "header",
        "content": "t:global.section.header_category"
      }, {
        "type": "inline_richtext",
        "id": "subheading",
        "label": "t:global.text.subheading"
      }, {
        "type": "inline_richtext",
        "id": "title",
        "label": "t:global.text.heading",
        "default": "Outfit creator"
      }, {
        "type": "richtext",
        "id": "content",
        "label": "t:global.text.content"
      },
      {
        "type": "image_picker",
        "id": "preview_image",
        "label": "Preview Image"
      }
    ],
    "presets": [
      {
        "name": "Outfit Creator"
      }
    ]
  }
{% endschema %}